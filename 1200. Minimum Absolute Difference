// Runtime 159 ms Beats 85.78% || Memory 54.8 MB Beats 40.20%

var minimumAbsDifference = function(arr) {
    arr.sort((a,b) => a - b)
    let min = arr[1] - arr[0]
    for( let i = 2; i < arr.length; i++ ){
        if( arr[i] - arr[i - 1] < min ){
            min = arr[i] - arr[i - 1]
        }
    }
    let result = []
    for( let i = 1; i < arr.length; i++ ){
        if( arr[i] - arr[i - 1] == min ){
            result.push( [arr[i - 1], arr[i]] )
        }
    }
    return result
};
