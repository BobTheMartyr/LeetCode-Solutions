// Runtime 66 ms Beats 42.4% || Memory 42.1 MB Beats 45.23%

var numberOfSteps = function(num) {
    let count = 0
    while( num > 0 ){
        if( num % 2 === 0 ){
            num /= 2
            count++
        } else{
            num -= 1
            count++
        }
    }
    return count
};
